@model Supplier

@{
    ViewData["Title"] = "Create";
}

@*<span asp-validation-for="Name" class="text-danger"></span>
    <span asp-validation-for="Type" class="text-danger"></span>*@
<style>
</style>
<form asp-action="Suppliers_Create">
    <div class="row g-1 mb-1">
        <label class="col-sm-2 col-form-label-sm" for="SupplierName">Supplier Name <span class="text-danger">*</span></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name" class="text-danger">@ViewBag.ErrorMsg</span>
        </div>
    </div>

    <div class="row g-1 mb-1">
        <label class="col-sm-2 col-form-label-sm" for="SupplierCode">Code<span class="text-danger">*</span></label>
        <div class="col-sm-3">
            <input asp-for="Code" class="form-control form-control-sm" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-1">
        <label class="col-sm-2 col-form-label-sm" for="SupplierStatus">Status</label>
        <div class="col-sm-3">
            <select class="form-select form-select-sm" name="Status">
                <option value="true">ACTIVE</option>
                <option value="false">CLOSE</option>
            </select>
        </div>
    </div>

    <hr class="my-3">

    @*改成Radio*@
    <div class="row g-1">
        <label class="col-sm-2 col-form-label-sm pt-0">Type <span class="text-danger">*</span></label>
        <div class="col-sm-5">
            <div class="form-check">
                <label class="form__checkLabel"><input type="radio" class="form-check-input" name="Type" value="Manufacturer"  />Manufacturer</label>
            </div>
            <div class="form-check">
                <label class="form__checkLabel"><input type="radio" class="form-check-input" name="Type" value="Vendor"  />Vendor</label>
            </div>
            <div class="form-check">
                <label class="form__checkLabel"><input type="radio" class="form-check-input" name="Type" value="Vendor,Manufacturer"  />Both</label>
            </div>
        </div>
        <span asp-validation-for="Type" class="text-danger"></span>
        @*<div id="error"></div>*@
    </div>

    <hr class="my-3">

    <div class="row g-1">
        <label class="col-sm-2 col-form-label-sm" for="Notes">Notes</label>
        <div class="col-sm-6">
            <textarea asp-for="Notes" class="form-control form-control-sm" id="Notes" rows="6"></textarea>
        </div>
    </div>

    <div class="form-group row mt-5">
        <div class="col">
            <a asp-action="Suppliers" class="btn btn-link me-3" role="button">Cancel</a>
            <button type="submit" class="btn btn-primary" >Create</button>
        </div>
    </div>
</form>


