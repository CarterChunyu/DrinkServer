@model Store

@{

    ViewData["Title"] = "Create";
}
        
        <form asp-action="Stores_Create">

            <div class="row g-1 mb-1">
                <label class="col-sm-2 col-form-label-sm" for="StoreRegion">Region</label>
                <div class="col-sm-3">
                    <select asp-for="LocationId" class="form-select form-select-sm" asp-items="ViewBag.LocationId"> </select>
                </div>
            </div>

            <div class="row g-1 mb-1">
                <label class="col-sm-2 col-form-label-sm" for="StoreName">Store Name <span class="text-danger">*</span></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control form-control-sm" id="storeName" />
                    <span asp-validation-for="Name" class="text-danger">@ViewBag.ErrorMsg</span>
                </div>
            </div>

            <div class="row g-1 mb-1">
                <label class="col-sm-2 col-form-label-sm" for="StoreCode">Code<span class="text-danger">*</span></label>
                <div class="col-sm-3">
                    <input asp-for="Code" class="form-control form-control-sm" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-1">
                <label class="col-sm-2 col-form-label-sm" for="StoreStatus">Status</label>
                <div class="col-sm-3">
                    <select class="form-select form-select-sm" id="StoreStatus" aria-label="Select Status" name="Status">
                        <option value="true">Active</option>
                        <option value="false">Closed</option>
                    </select>
                </div>
            </div>
            <hr class="my-3">
            <div class="row g-1">
                <label class="col-sm-2 col-form-label-sm" for="Notes">Notes</label>
                <div class="col-sm-6">
                    <textarea class="form-control form-control-sm" id="Notes" rows="6" asp-for="Note"></textarea>
                </div>
            </div>

            <div class="form-group row mt-5">
                <div class="col">
                    <a asp-action="Stores" class="btn btn-link me-3" role="button">Cancel</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </form>

