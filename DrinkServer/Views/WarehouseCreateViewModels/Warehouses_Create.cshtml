@model WarehouseCreateViewModel



@{
    ViewData["Title"] = "Create";
    var s = ViewBag.x as ListViewModel;
}

        
        <form asp-action="Warehouses_Create">
            <div class="row g-1 mb-1">
                <label class="col-sm-2 col-form-label-sm" for="WarehouseName">Warehouse Name <span class="text-danger">*</span></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger">@ViewBag.ErrorMsg</span>
                </div>
            </div>

            <div class="row g-1 mb-1">
                <label class="col-sm-2 col-form-label-sm" for="WarehouseCode">Code<span class="text-danger">*</span></label>
                <div class="col-sm-3">
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-1">
                <label class="col-sm-2 col-form-label-sm" for="WarehouseStatus">Status</label>
                <div class="col-sm-3">
                    <select class="form-select form-select-sm" id="WarehouseStatus" aria-label="Select Status" name="Status">
                        <option value="true">Active</option>
                        <option value="false">Closed</option>
                    </select>
                </div>
            </div>

            <hr class="my-3">

            <div class="row g-1">
                <label class="col-sm-2 col-form-label-sm pt-0">This warehouse<br>accepts orders from</label>
                <div class="col-sm-10">
                    <div class="twoColumns">
                        <div class="form-check">
                            @foreach (var item in s.StoreList)

                            {
                                <div><input type="checkbox" value="@item.Id" name="StoreIdArray" class="form-check-input"><span class="badge bg-secondary">Store</span>&nbsp<label class="form__checkLabel" for="CheckExample0">@item.Name</label></div>
                            }

                        </div>
                        <div class="form-check">
                            @foreach (var item in s.WarehouseList)

                            {

                                <div><input type="checkbox" value="@item.Id" name="WarehouseIdArray" class="form-check-input"><span class="badge bg-secondary">Warehouse</span>&nbsp<label class="form__checkLabel" for="CheckExample1">@item.Name </label></div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-3">

            <div class="row g-1">
                <label class="col-sm-2 col-form-label-sm" for="Notes">Notes</label>
                <div class="col-sm-6">
                    <textarea asp-for="Note" class="form-control form-control-sm" id="Notes" rows="6"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-5">
                <div class="col">
                    <a asp-action="Warehouses" class="btn btn-link me-3" role="button">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>

        </form>

    @*</main>

    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>*@
