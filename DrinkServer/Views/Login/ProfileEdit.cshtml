<form asp-action="ProfileEdit" asp-controller="Login">

    <h3 class="mb-3">Profile</h3>

    <input asp-for="UserId" hidden="hidden"/>
    <div class="row g-1 mb-1">
        <label class="col-sm-2 col-form-label-sm" for="DisplayName">Display Name <span class="text-danger">*</span></label>
        <div class="col-sm-10">
            <input asp-for="DisplayName" type="text" class="form-control form-control-sm" id="DisplayName">
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-1 mb-1">
        <label class="col-sm-2 col-form-label-sm" for="Email">Email</label>
        <div class="col-sm-5">
            <input asp-for="Email" type="text" class="form-control form-control-sm" id="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <hr class="my-3">

    <div class="row g-1 mb-1">
        <label class="col-sm-2 col-form-label-sm">Password</label>
        <div class="col-sm-5">
            <a asp-controller="Login" asp-action="ChagePassword" asp-route-id="@Model.UserId"
               class="btn btn-link btn-sm" role="button">Change Password</a>
        </div>
    </div>

    <div class="form-group row mt-5">
        <div class="col">
            <a asp-controller="Login" asp-action="Profile" asp-route-id="@Model.UserId" class="btn btn-link me-3" role="button">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>